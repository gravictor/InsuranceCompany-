@using FVerStoreApp.Models
@model IEnumerable<Insurance>
@{
    ViewData["Title"] = "Виды страховок";
}
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
</head>
<body>
    <h2>Все страховки</h2>
    @{
        foreach (var insurance in Model)
        {
            <div>
                <h2>Модель: @insurance.Name</h2>
                <p>Цена: @insurance.Price.ToString("c")</p>
            </div>
        }
     }
</body>
</html>