@model FVerStoreApp.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
@if (User.Identity.IsAuthenticated)
{
    foreach (var item in Model.orderModels)
    {
        if (item.Email==User.Identity.Name)
        {
            <form asp-action="Insuranes" asp-controller="OrderInsurance">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="@item.Id" />
            </div>
            <div class="form-group">
                <label asp-for="@item.Email" class="control-label">Email</label>
                <input type="text" asp-for="@item.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@item.Name" class="control-label">Имя</label>
                <input type="text" asp-for="@item.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@item.Price" class="control-label">Цена</label>
            </div>
            <div class="form-group">
                <label asp-for="@item.Insurance" class="control-label">Cтраховка</label>
                <input type="text" asp-for="@item.Insurance" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@item.countMonth" class="control-label">Количество месяцев</label>
                <input type="text" asp-for="@item.countMonth" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Купить" class="btn btn-outline-secondary" />
            </div>
        </form>
        }
    }
}
else
{
    <a asp-controller="Account" asp-action="Login">Вход</a>
    <a asp-controller="Account" asp-action="Register">Регистрация</a>
}